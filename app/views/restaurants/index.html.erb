<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant.name, restaurant %>
  <%= restaurant.address %>
  <%= restaurant.phone_number %>
  <%= restaurant.category %>

  <%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% end %>

